<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <Button
        android:text="stand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hit_button"
        android:id="@+id/stand_button"
        android:layout_alignRight="@+id/hit_button"
        android:layout_alignEnd="@+id/hit_button"
        android:layout_alignLeft="@+id/hit_button"
        android:layout_alignStart="@+id/hit_button" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/back"
        android:layout_marginTop="36dp"
        android:id="@+id/dealer_card2"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealer"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignTop="@+id/dealer_card2"
        android:layout_toRightOf="@+id/dealer_card2"
        android:layout_toEndOf="@+id/dealer_card2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_alignBottom="@+id/dealer_card1"
        android:layout_alignRight="@+id/dealer"
        android:layout_alignEnd="@+id/dealer"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/back"
        android:id="@+id/player_card2"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/score"
        android:layout_toStartOf="@+id/score"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_score"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/dealer_card1"
        android:layout_toStartOf="@+id/dealer_card1"
        android:textColor="@color/white" />

    <TextView
        android:text="Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_above="@+id/player_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/back"
        android:layout_marginBottom="13dp"
        android:id="@+id/player_card1"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/player"
        android:layout_toRightOf="@+id/player"
        android:layout_toEndOf="@+id/player"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/back"
        android:id="@+id/dealer_card1"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/player_card2"
        android:layout_toStartOf="@+id/player_card2" />

    <Button
        android:text="hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/hit_button"
        android:layout_below="@+id/dealer_card2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Money available:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moneyavail_tv"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/hit_button"
        android:layout_alignBottom="@+id/hit_button"
        android:layout_alignRight="@+id/dealer_card2"
        android:layout_alignEnd="@+id/dealer_card2"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money_textview"
        android:layout_alignBaseline="@+id/moneyavail_tv"
        android:layout_alignBottom="@+id/moneyavail_tv"
        android:layout_toRightOf="@+id/dealer_card2"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:text="Amount to bet:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bet_money"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_below="@+id/hit_button"
        android:layout_alignLeft="@+id/moneyavail_tv"
        android:layout_alignStart="@+id/moneyavail_tv"
        android:layout_alignRight="@+id/moneyavail_tv"
        android:layout_alignEnd="@+id/moneyavail_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bet_money"
        android:layout_toRightOf="@+id/money_textview"
        android:layout_toEndOf="@+id/money_textview"
        android:id="@+id/money_bet"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <TextView
        android:text="Welcome to Blackjack! Try to get as close to 21 as possible, but don't go over!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whoWon_textview"
        android:layout_above="@+id/player_card1"
        android:layout_toRightOf="@+id/bet_money"
        android:layout_toEndOf="@+id/bet_money" />

</RelativeLayout>